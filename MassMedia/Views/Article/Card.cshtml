@model MassMedia.DataAccess.Entities.ArticleEntity

<div class="card bg-dark text-light shadow-lg rounded-4 overflow-hidden h-100">
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" class="card-img-top object-fit-cover" style="max-height: 200px;" alt="@Model.Head" />
    }

    <div class="card-body d-flex flex-column">
        <h5 class="card-title">
            @(Model.Head.Length > 15 ? Model.Head.Substring(0, 15) + "..." : Model.Head)
        </h5>
        <p class="card-text text-truncate">
            @(Model.Body.Length > 50 ? Model.Body.Substring(0, 50) + "..." : Model.Body)
        </p>

        <div class="mt-auto d-flex justify-content-between align-items-center">
            <small class="text-muted">
                Опубликовано: @Model.CreatedAt.ToString("dd.MM.yyyy")
            </small>

            @if (Model.CreatedBy != null)
            {
                <span class="badge bg-secondary">@Model.CreatedBy.Email</span>
            }
        </div>

        <a href="/Article/@Model.Id" class="btn btn-outline-light w-100 mt-3">
            Читать далее
        </a>
    </div>
</div>
